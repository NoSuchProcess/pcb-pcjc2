 	*-*-mingw* )
 		WIN32=yes
-		CFLAGS="$CFLAGS ${MINGW_CFLAGS:--mms-bitfields -mwindows}"
-		CPPFLAGS="$CPPFLAGS ${MINGW_CPPFLAGS}"
+		CFLAGS="$CFLAGS --mms-bitfields -mwindows"
 		;;
 
 	* )
