+                    "    discard;\n"
+                    "  gl_FragColor = gl_Color;\n"
+                    "}\n";
+
+  /* Compile and load the program */
+
+//  GLuint vs; /* Vertex Shader */
+  GLuint fs; /* Fragment Shader */
+
