+void
+hidgl_finish_triangle_array (triangle_buffer *buffer)
+{
+  glUnmapBuffer (GL_ARRAY_BUFFER);
+  glBindBuffer (GL_ARRAY_BUFFER, 0);
+
+  glDeleteBuffers (1, &buffer->primary_vbo_id);
+  buffer->primary_vbo_id = 0;
