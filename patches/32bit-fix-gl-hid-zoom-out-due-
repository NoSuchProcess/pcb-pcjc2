+
+static inline Coord
+Px (int x)
+{
+  double rv = (double)x * gport->view.coord_per_px + gport->view.x0;
+
+  if (gport->view.flip_x)
+    rv = PCB->MaxWidth - rv;
+
+  if (rv > G_MAXINT / 4)
+    rv = G_MAXINT / 4;
+
+  if (rv < -G_MAXINT / 4)
+    rv = -G_MAXINT / 4;
+
+  return  rv;
+}
+
+static inline Coord
+Py (int y)
+{
+  double rv = (double)y * gport->view.coord_per_px + gport->view.y0;
+  if (gport->view.flip_y)
+    rv = PCB->MaxHeight - rv;
+
+  if (rv > G_MAXINT / 4)
+    rv = G_MAXINT / 4;
+
+  if (rv < -G_MAXINT / 4)
+    rv = -G_MAXINT / 4;
+
+  return  rv;
+}
